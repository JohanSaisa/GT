@	using GT.Core.DTO.Impl
@	using GT.UI.Enums
@model 					ListingDTO
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
	ViewData["Title"] = "Delete Listing";
}

<h1>@ViewData["Title"]: @Model.JobTitle</h1>

<div class="container">
	<div class="row">
		<div class="col-2">
			<p>Listing Title:</p>
		</div>
		<div class="col-10">
			<p>@Model.ListingTitle</p>
		</div>
	</div>
	<div class="row">
		<div class="col-2">
			<p>Company:</p>
		</div>
		<div class="col-10">
			<p>@Model.Employer</p>
		</div>
	</div>
	<div class="row">
		<div class="col-2">
			<p>Job title:</p>
		</div>
		<div class="col-10">
			<p>@Model.JobTitle</p>
		</div>
	</div>
	<div class="row">
		<div class="col-2">
			<p>Description:</p>
		</div>
		<div class="col-10">
			<p>@Model.Description</p>
		</div>
	</div>
	<div class="row">
		<div class="col-2">
			<p>Salary min:</p>
		</div>
		<div class="col-10">
			<p>@Model.SalaryMin</p>
		</div>
	</div>
	<div class="row">
		<div class="col-2">
			<p>Salary max:</p>
		</div>
		<div class="col-10">
			<p>@Model.SalaryMax</p>
		</div>
	</div>
	<div class="row">
		<div class="col-2">
			<p>Location:</p>
		</div>
		<div class="col-10">
			<p>@Model.Location</p>
		</div>
	</div>
	<div class="row">
		<div class="col-2">
			<p>Employment type:</p>
		</div>
		<div class="col-10">
			<p>@Model.FTE</p>
		</div>
	</div>
	<div class="row">
		<div class="col-2">
			<p>Experience level:</p>
		</div>
		<div class="col-10">
			<p>@Model.ExperienceLevel</p>
		</div>
	</div>
	<h2 class="text-danger">Are you sure you want to delete this listing?</h2>
	<form asp-action="Delete">
		<input type="hidden" asp-for="Id" />
		<input type="submit" value="Delete" class="btn btn-danger" />
		<a asp-action="ListingOverview" class="btn btn-primary">Back to Listings</a>
	</form>
</div>
